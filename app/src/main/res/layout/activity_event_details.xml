<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsActivity">

    <TextView
        android:id="@+id/detailsRSVPDesc"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:text="You have not RSVP'ed"
        android:textColor="#000000"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="221dp" />

    <TextView
        android:id="@+id/detailsPosterEmail"
        android:layout_width="293dp"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:text="Post Name"
        android:textColor="#000000"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/detailsRSVP"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:text="RSVP Num"
        android:textColor="#000000"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="153dp" />

    <TextView
        android:id="@+id/detailsEventDesc"
        android:layout_width="287dp"
        android:layout_height="133dp"
        android:text="Post Name"
        android:textColor="#000000"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="299dp" />

    <TextView
        android:id="@+id/detailsName"
        android:layout_width="293dp"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:text="Post Name"
        android:textColor="#000000"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="26dp" />

    <ImageView
        android:id="@+id/detailsEventImage"
        android:layout_width="125dp"
        android:layout_height="123dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="153dp" />

    <Button
        android:id="@+id/detailsRSVPButton"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:text="RSVP"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="445dp" />

</android.support.constraint.ConstraintLayout>